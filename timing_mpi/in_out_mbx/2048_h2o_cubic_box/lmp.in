processors * * * map xyz
boundary        p p p

units		real
atom_style	full

pair_style      mbx 9.0
pair_modify     mix arithmetic

read_data       lmp.data

pair_coeff      * *  0.0 0.0

neighbor	2.0 bin
neigh_modify	every 1

timestep        1.0

compute         mbx all pair mbx
variable        e1    equal c_mbx[1]
variable        e2    equal c_mbx[2]
variable        e3    equal c_mbx[3]
variable        edisp equal c_mbx[4]
variable        ebuck equal c_mbx[5]
variable        eele  equal c_mbx[6]
variable        etot  equal c_mbx[7]
variable        vxx   equal c_mbx[14]
variable        vyy   equal c_mbx[15]
variable        vzz   equal c_mbx[16]
variable        vxy   equal c_mbx[17]
variable        vxz   equal c_mbx[18]
variable        vyz   equal c_mbx[19]

thermo_style    custom step temp v_e1 v_e2 v_e3 v_ebuck v_edisp v_eele v_etot pe etotal pxx pyy pzz pxy pxz pyz v_vxx v_vyy v_vzz v_vxy v_vxz v_vyz
#thermo_style    custom step temp pe etotal
thermo		1

fix             1 all nve
fix             2 all mbx 1 2048 h2o json mbx.json print/settings

dump            1 all custom 1 lmp.lammpstrj id type x y z fx fy fz
dump_modify     1 sort id

#velocity        all create 300.0 4928459 rot yes dist gaussian
#velocity        all zero linear

#run              10
run             ${NSTEPS}
